<script id="crosshair_cursor">
    $(document).ready(function () {
  // Setup our variables
  var cH = $('#crosshair-h'),
  cV = $('#crosshair-v');

  $(this).on('mousemove touchmove', function (e) {
    var x = e.pageX - 1;
    var y = e.clientY - 1;
    cH.css('top', e.pageY);
    cV.css('left', e.pageX);

    $('#mousepos').css({
      top: e.clientY,
      left: e.pageX },
    800);
    $('#mousepos');
    e.stopPropagation();
  });

  // Anchor Hover Effects
  $("a").hover(function () {
    $(".hair").stop().css({ borderColor: "#fff" }, 800);},
  function () {
    $(".hair").stop().css({ borderColor: "white" }, 800);
  });
  e.stopPropagation();
});
    //# sourceURL=pen.js
  </script>
  
